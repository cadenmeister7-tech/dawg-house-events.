<p>Contact: hello@dawghouse.events | (312) 555-0199</p>
</footer>

<script>
// ================== Data ==================
const EVENTS = [
  {
    id:1,name:"Dawg House Card Show - Nov 1, 2025",date:"Nov 1, 2025",location:"Dawg House Convention Center, Chicago, IL",
    description:"Join us for our largest trading card event! Vendors showcase collectibles, memorabilia, and more.",
    amenities:["Free Wi-Fi","Loading dock access","Electric hookups","24/7 security","Food court"],
    rows:8,cols:12,premiumRows:[1,2],
    cornerSeats:[{r:1,c:1},{r:1,c:12},{r:8,c:1},{r:8,c:12}],reserved:[]
  },
  {
    id:2,name:"Dawg House Car & Vintage Show - Oct 10, 2025",date:"Oct 10, 2025",location:"Downtown Motor Hall, Detroit, MI",
    description:"Experience vintage and modern vehicles. Vendors include restorers, services, and memorabilia collectors.",
    amenities:["Indoor/Outdoor booths","Premium parking","EV charging","Photography packages","Networking mixer"],
    rows:6,cols:10,premiumRows:[1],cornerSeats:[{r:1,c:1},{r:1,c:10},{r:6,c:1},{r:6,c:10}],reserved:[]
  }
];

let currentPage='home',selectedEvent=null,selectedSeats=[];
const main=document.getElementById('main');

// ================== Functions ==================
function showHome(){
  currentPage='home';
  main.innerHTML='<h2 style="text-align:center;color:#111;">Upcoming Events</h2><div class="events-grid"></div>';
  const grid=main.querySelector('.events-grid');
  EVENTS.forEach(ev=>{
    const card=document.createElement('div');
    card.className='event-card';
    card.innerHTML=`<img src="https://picsum.photos/400/200?random=${ev.id}" alt="${ev.name}">
      <div class="content">
        <h3>${ev.name}</h3>
        <p>${ev.date} | ${ev.location}</p>
        <p>${ev.description.substring(0,100)}...</p>
        <button onclick="showEventDetails(${ev.id})">View Details</button>
      </div>`;
    grid.appendChild(card);
  });
}

function showEventDetails(eventId){
  currentPage='details';
  selectedEvent=EVENTS.find(e=>e.id===eventId);
  selectedSeats=[];
  main.innerHTML=`<div class="event-details">
    <button class="btn btn-back" onclick="showHome()">← Back to Events</button>
    <h2>${selectedEvent.name}</h2>
    <p><strong>Date:</strong> ${selectedEvent.date}</p>
    <p><strong>Location:</strong> ${selectedEvent.location}</p>
    <p>${selectedEvent.description}</p>
    <h3>Amenities:</h3>
    <ul>${selectedEvent.amenities.map(a=>`<li>${a}</li>`).join('')}</ul>
    <button class="btn btn-reserve" onclick="showSeatPicker()">Pick Your Booths</button>
  </div>`;
}

function showSeatPicker(){
  currentPage='seats';
  selectedSeats=[];
  main.innerHTML=`<button class="btn btn-back" onclick="showEventDetails(${selectedEvent.id})">← Back to Details</button>
    <h2>${selectedEvent.name} - Select Booths</h2>
    <div id="seat-grid" class="seat-grid"></div>
    <div class="cart" id="cart"><h4>Selected Booths: None</h4></div>
    <button class="btn btn-reserve" onclick="reserveSeats()">Reserve Booths</button>`;
  renderSeats();
}

function renderSeats(){
  const grid=document.getElementById('seat-grid'); grid.innerHTML='';
  for(let r=1;r<=selectedEvent.rows;r++){
    const rowDiv=document.createElement('div'); rowDiv.className='seat-row';
    for(let c=1;c<=selectedEvent.cols;c++){
      const seat=document.createElement('div'); seat.className='seat'; seat.textContent=c;
      if(selectedEvent.premiumRows.includes(r)) seat.classList.add('premium');
      if(selectedEvent.cornerSeats.some(s=>s.r===r && s.c===c)) seat.classList.add('corner');
      if(selectedEvent.reserved.some(s=>s.r===r && s.c===c)) seat.classList.add('taken');
      seat.onclick=()=>toggleSeat(r,c,seat);
      rowDiv.appendChild(seat);
    }
    grid.appendChild(rowDiv);
  }
  updateCart();
}

function toggleSeat(r,c,seatDiv){
  const key=`R${r}C${c}`;
  if(seatDiv.classList.contains('taken')) return;
  if(seatDiv.classList.contains('selected')){
    seatDiv.classList.remove('selected');
    selectedSeats=selectedSeats.filter(s=>s!==key);
  } else {
    seatDiv.classList.add('selected');
    selectedSeats.push(key);
  }
  updateCart();
}

function updateCart(){
  const cart=document.getElementById('cart'); if(!cart) return;
  cart.innerHTML=`<h4>Selected Booths: ${selectedSeats.join(', ') || 'None'}</h4>`;
}

function reserveSeats(){
  if(selectedSeats.length===0){ alert('Select at least one booth'); return; }
  selectedSeats.forEach(s=>{
    const r=parseInt(s.slice(1,s.indexOf('C'))); 
    const c=parseInt(s.slice(s.indexOf('C')+1));
    selectedEvent.reserved.push({r,c});
  });
  alert('Booths reserved: '+selectedSeats.join(', '));
  showSeatPicker();
}

// ================== Initialize ==================
showHome();
</script>

</body>
</html>


